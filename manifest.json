{
    "manifest_version": 2,
    "name": "JPDB memriser",
    "version": "2.1",
    "permissions": [
        "cookies",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.jpdb.io/*"
            ],
            "js": [
                "js/wanakana.min.js",
                "content.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/logo.png"
        }
    },
    "icons": {
        "128": "images/logo.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "yeru@manabe.es"
        }
    }
}